<%- include("partials/header"); -%>
<div class="box">
    <span class="page-heading">Register</span>
    <form class="form" action="/register" method="post">
        <div class="form-div">
            <label class="form-label" for="name">Full Name <span class="red">*</span></label>
            <input class="form-text" type="text" id="name" name="name" required>
        </div>
        <div class="form-div">
            <label class="form-label" for="email">Email address <span class="red">*</span></label>
            <input class="form-text" type="email" id="email" name="email" required>
        </div>
        <div class="form-div">
            <label class="form-label" for="password">Password <span class="red">*</span></label>
            <input class="form-text" type="password" id="password" name="password" required>
        </div>
        <button class="submit-button" type="submit">Register</button>
    </form>
    <div class="followed-text">
        <span class="already">Already have an account?</span>
        <a class="link" href="/login">Login</a>
    </div>
</div>
<%- include("partials/footer"); -%>